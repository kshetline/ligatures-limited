{
  // "editor.fontFamily": "Iosevka, 'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": "'ss07'",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "string.unquoted.cdata.xml",
        "settings": {
          "foreground": "#D4D4D4"
        }
      }
    ]
  },
  "[c]": {
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": false
  },
  "ligaturesLimited.ligatures": "- fi",
  "ligaturesLimited.languages": {
    "css, javascript": {
      "ligaturesByContext": {
        "comment.block": {
          "ligatures": "0 www 0xF 9x9"
        }
      }
    },
    "html": {
      "ligaturesByContext": {
        "attribute_value": {
          "ligatures": "0 www"
        }
      }
    },
    "typescript": {
      "inherit": "javascript",
      "ligatures": "- !=",
      "ligaturesByContext": {
        "comment.line": {
          "ligatures": "X www !== <= 9x9 0xF 9x9"
        }
      }
    },
    "markdown": true,
    "plaintext, json, jsonc, json5": false
  }
}
